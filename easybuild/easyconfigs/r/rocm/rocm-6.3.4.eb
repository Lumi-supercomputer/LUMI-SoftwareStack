postinstall_script = """
echo "gfx90a" > %(installdir)s/bin/target.lst

pushd %(installdir)s/lib

find . -maxdepth 1 -type f -name "*.so*" -exec sh -c '
  if file $0 | grep -q "dynamically"; then
    patchelf --force-rpath --set-rpath "\$ORIGIN:\$ORIGIN/llvm/lib" $0
  fi' {} \;

for subdir in roctracer rocprofiler-systems migraphx; do
  pushd $subdir
  find . -maxdepth 1 -type f -name "*.so*" -exec sh -c '
    if file $0 | grep -q "dynamically"; then
      patchelf --force-rpath --set-rpath "\$ORIGIN:\$ORIGIN/../:\$ORIGIN/../llvm/lib" $0
    fi' {} \;
  popd
done

for lib in *migraphx*.so*; do
  if file $lib | grep -q "dynamically"; then
    patchelf --force-rpath --set-rpath "\$ORIGIN:\$ORIGIN/llvm/lib:\$ORIGIN/migraphx/lib" $lib
  fi
done

for lib in *rocprof-sys*.so*; do
  if file $lib | grep -q "dynamically"; then
    patchelf --force-rpath --set-rpath "\$ORIGIN:\$ORIGIN/llvm/lib:\$ORIGIN/rocprofiler-systems" $lib
  fi
done

for compiler in clang++ clang-cpp clang; do
  echo "-Wl,-rpath=$PWD" >> ./llvm/bin/$compiler.cfg
  echo "-Wl,-rpath=$PWD/llvm/lib" >> ./llvm/bin/$compiler.cfg
done

sed -i "s/enable-new-dtags/disable-new-dtags/" ./llvm/bin/rocm.cfg

popd

rocprofcompdir=%(installdir)s/libexec/rocprofiler-compute
mkdir -p $rocprofcompdir/deps

sed -i '34i sys.path.insert(0, f"'$rocprofcompdir'/deps/lib/python3.{sys.version_info[1]}/site-packages")' $rocprofcompdir/rocprof-compute
sed -i 's/self.app.run_server/self.app.run/' $rocprofcompdir/rocprof_compute_analyze/analysis_webui.py

unset PYTHONPATH

for pythonmod in $(module --show-hidden --terse av cray-python 2>&1 | grep ^cray-python); do
  module load $pythonmod
  python_minmaj=$(python -c 'import sys; print(f"{sys.version_info[0]}.{sys.version_info[1]}")')

  if [[ ! -d $rocprofcompdir/deps/lib/python$python_minmaj ]]; then
    pip install --ignore-installed --no-cache-dir --prefix=$rocprofcompdir/deps -r $rocprofcompdir/requirements.txt
  fi
done
"""

